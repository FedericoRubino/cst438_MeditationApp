<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corners_feed"
    android:padding="10dp"
    >


    <ImageView
        android:id="@+id/post_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorNavyBackgroud"
        app:srcCompat="@drawable/ic_meditation" />

    <ImageView
        android:id="@+id/like_image"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_below="@+id/post_image"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/ic_lotus" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="83dp"
        android:layout_toEndOf="@id/titleTv"
        android:background="@drawable/rounded_corners"
        android:text="@string/details"
        android:textAllCaps="false" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/titleTv"
    android:layout_marginStart="8dp"
    android:textAllCaps="true"
    android:textSize="20sp"
    android:layout_toEndOf="@+id/post_image"
    android:text="@string/title2"
    android:textColor="@color/colorNavyBackgroud"
    />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/post_image"
        android:text="@string/username3"
        android:textColor="@color/colorNavyBackgroud"

        android:textStyle="italic" />

    <TextView
        android:id="@+id/postTv"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_toEndOf="@+id/post_image"
        android:layout_below="@+id/tvUsername"
        android:text="@string/begin_a_two_minute_breathing_exercise_to_recenter_and_refocus"
        android:textColor="@color/colorNavyBackgroud" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/like_image"
        android:layout_below="@+id/post_image"
        android:layout_marginTop="10dp"
        android:text="@string/_1"
        android:textColor="@color/colorNavyBackgroud"
        android:visibility="visible"
        android:id="@+id/tvLikeCount"

        />



</RelativeLayout>